@page "/login"
@model BillerJacket.Web.Pages.LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Sign In";
}

<h1>Sign in</h1>
<p class="subtitle">Welcome back to BillerJacket</p>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-error">@Model.ErrorMessage</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" type="email" autocomplete="email" autofocus />
        <span asp-validation-for="Input.Email" class="validation-message"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" type="password" autocomplete="current-password" />
        <span asp-validation-for="Input.Password" class="validation-message"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-full">Sign in</button>
</form>

<div class="auth-links">
    Don't have an account? <a href="/register">Create one</a>
</div>

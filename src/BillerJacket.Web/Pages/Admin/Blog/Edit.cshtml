@page "/admin/blog/edit/{id?}"
@model BillerJacket.Web.Pages.Admin.Blog.EditModel
@using BillerJacket.Domain.Enums
@{
    ViewData["Title"] = Model.IsNew ? "New Blog Post" : "Edit Blog Post";
}

<div style="max-width: 560px;">
    <h1 style="font-size: 22px; font-weight: 700; margin-bottom: 20px;">
        @(Model.IsNew ? "New Blog Post" : "Edit Blog Post")
    </h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error">@Model.ErrorMessage</div>
    }

    <form method="post">
        <input type="hidden" asp-for="Input.BlogPostId" />

        <div class="form-group">
            <label asp-for="Input.Title">Title</label>
            <input asp-for="Input.Title" autofocus />
            <span asp-validation-for="Input.Title" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Slug">Slug</label>
            <input asp-for="Input.Slug" />
            <span asp-validation-for="Input.Slug" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Excerpt">Excerpt</label>
            <input asp-for="Input.Excerpt" />
        </div>

        <div class="form-group">
            <label asp-for="Input.Content">Content</label>
            <textarea asp-for="Input.Content" rows="12"></textarea>
            <span asp-validation-for="Input.Content" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Status">Status</label>
            <select asp-for="Input.Status">
                @foreach (var s in Enum.GetValues<ContentStatus>())
                {
                    <option value="@s">@s</option>
                }
            </select>
        </div>

        <div style="display: flex; gap: 12px; margin-top: 24px;">
            <button type="submit" class="btn btn-primary">
                @(Model.IsNew ? "Create Post" : "Save Changes")
            </button>
            <a href="/admin/blog" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

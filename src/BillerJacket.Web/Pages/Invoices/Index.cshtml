@page "/invoices"
@model BillerJacket.Web.Pages.Invoices.IndexModel
@using BillerJacket.Domain.Enums
@{
    ViewData["Title"] = "Invoices";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h1 style="font-size: 22px; font-weight: 700;">Invoices</h1>
</div>

<div class="filter-bar">
    <form method="get">
        <select name="status" onchange="this.form.submit()">
            <option value="">All Statuses</option>
            @foreach (var s in Enum.GetValues<InvoiceStatus>())
            {
                <option value="@s" selected="@(Model.Status == s.ToString())">@s</option>
            }
        </select>
    </form>
</div>

@if (!Model.Invoices.Any())
{
    <div class="empty-state">
        <p>No invoices found.</p>
    </div>
}
else
{
    <div class="table-wrapper">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Invoice #</th>
                    <th>Customer</th>
                    <th>Status</th>
                    <th style="text-align:right">Total</th>
                    <th style="text-align:right">Balance Due</th>
                    <th>Due Date</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inv in Model.Invoices)
                {
                    <tr>
                        <td><a href="/invoices/@inv.InvoiceId">@inv.InvoiceNumber</a></td>
                        <td>@inv.CustomerName</td>
                        <td><span class="badge badge-@inv.Status.ToString().ToLower()">@inv.Status</span></td>
                        <td style="text-align:right">@inv.TotalAmount.ToString("C")</td>
                        <td style="text-align:right">@inv.BalanceDue.ToString("C")</td>
                        <td>@inv.DueDate.ToString("MMM d, yyyy")</td>
                        <td>@inv.CreatedAt.ToString("MMM d, yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
